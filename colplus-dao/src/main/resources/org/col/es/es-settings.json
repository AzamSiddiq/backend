{
	"analysis": {
		"tokenizer": {
			"autocomplete": {
				"type": "edge_ngram",
				"min_gram": 2,
				"max_gram": 12,
				"token_chars": [
					"letter"
				]
			}
		},
		"analyzer": {
			"ignore_case": {
				"tokenizer": "keyword",
				"filter": "lowercase"
			},
			"autocomplete": {
				"tokenizer": "autocomplete",
				"filter": "lowercase"
			},
			"autocomplete_search": {
				"tokenizer": "lowercase"
			}
		}
	},
	"index": {
		"refresh_interval": -1,
		"max_result_window": 50000
	}
}