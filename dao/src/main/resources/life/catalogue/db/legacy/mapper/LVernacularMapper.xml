<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="life.catalogue.db.legacy.mapper.LVernacularMapper">


  <resultMap id="vernacularResultMap" type="life.catalogue.db.legacy.model.LCommonName" autoMapping="true">
    <id column="id"/>
    <association property="acceptedName" resultMap="life.catalogue.db.legacy.mapper.LNameMapper.speciesResultMap" columnPrefix="a_"/>
  </resultMap>

  <sql id="SELECT">
    v.id, v.name, c.title AS country, l.title AS language,
    <include refid="life.catalogue.db.legacy.mapper.LNameMapper.COLS"><property name="prefix" value="a_"/></include>
  </sql>

  <sql id="WHERE">
    WHERE lower(v.name) LIKE <if test="prefix">lower('${name}%')</if><if test="!prefix">lower('${name}')</if>
  </sql>

  <select id="count" resultType="integer">
    <include refid="life.catalogue.db.Common.partitionByDatasetKey"/>
    SELECT count(*)
    FROM vernacular_name_${partition} v
    <include refid="WHERE"/>
  </select>

  <select id="search" resultMap="vernacularResultMap">
    <include refid="life.catalogue.db.Common.partitionByDatasetKey"/>
    SELECT <include refid="SELECT"/>
    FROM <include refid="life.catalogue.db.legacy.mapper.LNameMapper.FROM"/>
      JOIN vernacular_name_${partition} v ON v.taxon_id=u.id
      LEFT JOIN __language l ON l.code = v.language
      LEFT JOIN __country c  ON c.code = v.country
    <include refid="WHERE"/>
  </select>

</mapper>
